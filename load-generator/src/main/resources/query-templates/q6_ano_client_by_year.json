{
  "size": 50,
  "query": {
    "bool": {
      "must": [
        {
          "term": {
            "dssCreationUserDisplayName.raw": "{{client_name}}"
          }
        }
      ],
      "filter": [
        {
          "term": {
            "dssCustomMetadataPayrollInfo.accountingYear": "{{year}}"
          }
        }
      ]
    }
  },
  "_source": [
    "dssDocumentName",
    "dssCustomMetadataPayrollInfo.accounting_year",
    "dssCustomMetadataPayrollInfo.accounting_month",
    "dssCreationUserDisplayName",
    "dssDataspaceId"
  ]
}

