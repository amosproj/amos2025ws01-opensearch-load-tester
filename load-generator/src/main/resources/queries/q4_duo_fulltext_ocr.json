{
  "size": 10,
  "query": {
    "bool": {
      "must": [
        {
          "match": {
            "ocr_fulltext": "{{keyword}}"
          }
        }
        // o, si quieres m√°s campos de texto:
        // { "match": { "custom_all": "{{keyword}}" } }
      ],
      "filter": [
        {
          "term": {
            "dss_custom_metadata.duo.document_approval_state.raw": "{{state}}"
          }
        },
        {
          "term": {
            "dss_custom_metadata.duo.location.raw": "{{location}}"
          }
        }
      ]
    }
  },
  "_source": [
    "dss_document_name",
    "dss_custom_metadata.duo.document_approval_state",
    "dss_custom_metadata.duo.location"
  ]
}

