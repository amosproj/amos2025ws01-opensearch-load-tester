{
  "size": 50,
  "query": {
    "bool": {
      "filter": [
        {
          "regexp": {
            "dssDocumentName.sort": {
              "value": ".*(br.*ut.*to.*|ne.*tt.*o.*|ab.*re.*ch.*nu.*ng.*)+.*{{year}}.*\\.pdf",
              "max_determinized_states": 1000
            }
          }
        },
        {
          "regexp": {
            "customAll": {
              "value": "(abrechnung|brutto|netto)",
              "max_determinized_states": 1000
            }
          }
        },
        {
          "regexp": {
            "dssDocumentPath": {
              "value": ".*/documents/.{10,}/document"
            }
          }
        },
        {
          "regexp": {
            "dssDocumentSource": {
              "value": "https?://.*"
            }
          }
        }
      ]
    }
  }
}
