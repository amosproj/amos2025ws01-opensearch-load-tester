<component name="ProjectCodeStyleConfiguration">
  <code_scheme name="Amos Project Styles" version="173">
    <option name="LINE_SEPARATOR" value="&#10;" />
    <JavaCodeStyleSettings>
      <option name="IMPORT_LAYOUT_TABLE">
        <value>
          <package name="" withSubpackages="true" static="false" />
          <emptyLine />
          <package name="java" withSubpackages="true" static="false" />
          <emptyLine />
          <package name="javax" withSubpackages="true" static="false" />
          <emptyLine />
          <package name="org" withSubpackages="true" static="false" />
          <emptyLine />
          <package name="com" withSubpackages="true" static="false" />
          <emptyLine />
          <package name="" withSubpackages="true" static="true" />
        </value>
      </option>
    </JavaCodeStyleSettings>
    <codeStyleSettings language="JAVA">
      <!-- Braces Style: Egyptian braces (Google Java Style Guide) -->
      <!-- BRACE_STYLE: 0 = End of line (Egyptian/K&R style) - opening brace on same line -->
      <option name="BRACE_STYLE" value="0" />
      <option name="CLASS_BRACE_STYLE" value="0" />
      <option name="METHOD_BRACE_STYLE" value="0" />
      <!-- else, catch, finally, while on same line as closing brace -->
      <option name="ELSE_ON_NEW_LINE" value="false" />
      <option name="CATCH_ON_NEW_LINE" value="false" />
      <option name="FINALLY_ON_NEW_LINE" value="false" />
      <option name="WHILE_ON_NEW_LINE" value="false" />
      
      <!-- Blank Lines: Consistent spacing rules -->
      <option name="BLANK_LINES_AFTER_PACKAGE" value="1" />
      <option name="BLANK_LINES_AFTER_IMPORTS" value="1" />
      <option name="BLANK_LINES_AROUND_CLASS" value="1" />
      <option name="BLANK_LINES_AROUND_METHOD" value="1" />
      <option name="KEEP_BLANK_LINES_IN_CODE" value="1" />
      <option name="KEEP_BLANK_LINES_BEFORE_RBRACE" value="0" />
      
      <!-- Spaces around Keywords and Operators (Google Java Style Guide) -->
      <!-- No space before parentheses in method calls and declarations -->
      <option name="SPACE_BEFORE_METHOD_CALL_PARENTHESES" value="false" />
      <option name="SPACE_BEFORE_METHOD_PARENTHESES" value="false" />
      <!-- IMPORTANT: SPACE_BEFORE_IF_PARENTHESES = false means space between 'if' and '(' -->
      <!-- This ensures: if (condition) not if(condition) -->
      <option name="SPACE_BEFORE_IF_PARENTHESES" value="false" />
      <option name="SPACE_BEFORE_WHILE_PARENTHESES" value="false" />
      <option name="SPACE_BEFORE_FOR_PARENTHESES" value="false" />
      <option name="SPACE_BEFORE_SWITCH_PARENTHESES" value="false" />
      <option name="SPACE_BEFORE_CATCH_PARENTHESES" value="false" />
      <option name="SPACE_BEFORE_TRY_PARENTHESES" value="false" />
      <option name="SPACE_BEFORE_SYNCHRONIZED_PARENTHESES" value="false" />
      <!-- Space before else, catch, finally, while (in do-while) -->
      <option name="SPACE_BEFORE_ELSE_KEYWORD" value="true" />
      <option name="SPACE_BEFORE_CATCH_KEYWORD" value="true" />
      <option name="SPACE_BEFORE_FINALLY_KEYWORD" value="true" />
      <option name="SPACE_BEFORE_WHILE_KEYWORD" value="true" />
      <!-- Spaces around operators -->
      <option name="SPACE_BEFORE_QUEST" value="true" />
      <option name="SPACE_AFTER_QUEST" value="true" />
      <option name="SPACE_BEFORE_COLON" value="true" />
      <option name="SPACE_AFTER_COLON" value="true" />
      <!-- Spaces around lambda arrow -->
      <option name="SPACE_BEFORE_LAMBDA_ARROW" value="true" />
      <option name="SPACE_AFTER_LAMBDA_ARROW" value="true" />
      <!-- Space before annotation -->
      <option name="SPACE_BEFORE_ANNOTATION" value="false" />
      <option name="SPACE_AFTER_ANNOTATION" value="true" />
      <!-- Space before array initializer -->
      <option name="SPACE_BEFORE_ARRAY_INITIALIZER_LBRACE" value="true" />
      
      <!-- Additional settings to ensure Egyptian braces work correctly -->
      <option name="KEEP_LINE_BREAKS" value="false" />
      <option name="KEEP_LINE_BREAK_IN_CODE" value="false" />
      <option name="KEEP_CONTROL_STATEMENT_IN_ONE_LINE" value="false" />
    </codeStyleSettings>
  </code_scheme>
</component>